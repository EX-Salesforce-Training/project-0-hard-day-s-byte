        when BEFORE_DELETE{
            
        }
        when AFTER_INSERT{
             ScheduleTriggerHandlerTwo.SendingEmail(trigger.new);
        }
        when AFTER_UPDATE{
            
        }
        when AFTER_DELETE{
            
        }
        when AFTER_UNDELETE{
            
        }
    }
}
